
<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

  <!-- Main Site -->
  <main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
           <div class="filter">
               <a href="/"><i class="fas fa-angle-double-left"></i>Home</a>
           </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update User</h2>
            <span class="text-light">Use the below form to Update an account</span>
        </div>

        <!-- add user form -->
         <!-- form handling -->
 <form method="POST" id="update_user">
    <div class="new_user">
        <div class="form-group">
            <label for="cricketer_name" class="text-light">cricketer_name</label>
            <input type="hidden" name="id" value="<%= user._id %>">
            <input type="text" name="cricketer_name" value="<%= user.cricketer_name %>" placeholder="Kohli">
        </div>
        <div class="form-group">
            <label for="country" class="text-light">country</label>
            <input type="text" name="country" value="<%= user.country%>" placeholder="india">
        </div>
        <div class="form-group">
            <label for="number" class="text-light">number</label>
            <input type="text" name="number" value="<%= user.number%>" placeholder="18">
        </div>
        <div class="form-group">
            <label for="type" class="text-light">Type</label>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="type" value="Batsman" <%= user.type == 'Batsman' ? 'checked' : '' %>>
                <label for="radio-2" class="radio-label">Batsman</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="type" value="Bowler"  <%= user.type == 'Bowler' ? 'checked' : '' %> >
                <label for="radio-3" class="radio-label">Bowler</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="type" value="Allrounder"  <%= user.type == 'Allrounder' ? 'checked' : '' %> >
                <label for="radio-3" class="radio-label">Allrounder</label>
            </div>
        </div>

        <div class="form-group">
            <label for="gender" class="text-light">Status</label>
            <div class="radio inline">
                <input type="radio" id="radio-4" name="status" value="Active" <%= user.status == 'Active' ? 'checked' : '' %> >
                <label for="radio-4" class="radio-label">Active</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-5" name="status" value="Inactive" <%= user.status == 'Inactive' ? 'checked' : '' %> >
                <label for="radio-5" class="radio-label">Inactive</label>
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>
       
    </div>
</main>
<!-- /Main Site -->

<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->
